generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  lastName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones:
  participations MatchParticipant[]
}

model Match {
  id               Int      @id @default(autoincrement())
  date             DateTime
  pointsForWinners Int // p.ej. 50
  pointsForLosers  Int // p.ej. 25
  createdAt        DateTime @default(now())

  // Relaciones:
  participants MatchParticipant[]

  @@index([date])
}

model MatchParticipant {
  id      Int   @id @default(autoincrement())
  match   Match @relation(fields: [matchId], references: [id])
  matchId Int

  // relaci√≥n opcional a User; al borrar user, userId queda NULL
  user   User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId Int?

  isWinner Boolean
  points   Int

  // snapshot fields: guardamos nombre/email al momento del partido
  userName     String?
  userLastName String?
  userEmail    String?

  @@unique([matchId, userId])
  @@index([matchId])
  @@index([userId])
}
